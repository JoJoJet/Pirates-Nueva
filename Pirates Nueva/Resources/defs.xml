<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<BlockDef ID="root">
		<TextureID>rootBlock</TextureID>
	</BlockDef>
	<BlockDef ID="wood">
		<TextureID>woodBlock</TextureID>
	</BlockDef>
	<FurnitureDef ID="cannon">
		<TextureID>cannon</TextureID>
		<!-- Counted in number of blocks it takes up -->
		<TextureSize>1, 2</TextureSize>
		<!-- The point on the texture (from 0 to 1) from which the texture will be drawn. You can think of it as (1 - offset) -->
		<TextureOrigin>0.5, 0.25</TextureOrigin>
	</FurnitureDef>
	<SliceDef ID="panel">
		<TextureID>panel</TextureID>
		<Slices>
			<Left>10</Left>
			<Right>10</Right>
			<Top>10</Top>
			<Bottom>10</Bottom>
		</Slices>
	</SliceDef>
</Defs>
